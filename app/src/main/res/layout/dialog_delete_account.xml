<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/dialogBackground">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you sure that you want to delete this account?"
        android:textSize="25sp"
        android:textColor="@color/dialogTitle"
        android:textAlignment="center"
        android:textStyle="bold"
        android:padding="6dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:src="@android:drawable/ic_dialog_info"
            android:contentDescription="Info Icon"
            app:tint="@color/dialogInfo"
            android:layout_marginEnd="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The deletion of the account happens locally. You can re-create an account with the same email and password at any time and you will be able to generate the same passwords."
            android:textSize="14sp"
            android:textColor="@color/dialogInfo" />
    </LinearLayout>

    <Button
        android:id="@+id/deleteAccountButtonConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete the account"
        android:backgroundTint="@color/dialogConfirmButtonBackground"
        android:padding="6dp"/>
</LinearLayout>
